    <!-- events title -->
    <style name="events_list_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/listitem_gray</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="events_list_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">@color/listitem_black</item>
        <item name="android:textColorLink">@color/listitem_blue</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="events_list_commits">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:background">@drawable/review_bg_blue</item>
        <item name="android:tag">1</item>
        <item name="android:textColor">@color/listitem_black</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="events_list_client">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textColor">@color/listitem_gray</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="events_list_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <!-- events list style end -->
    <!-- project list text style bgein -->
    <style name="project_list_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- title -->
    <style name="project_list_title" parent="project_list_text_parent">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <!-- description -->
    <style name="project_list_description" parent="project_list_text_parent">
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- language starfork nums -->
    <style name="project_list_someinfo" parent="project_list_text_parent">
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- language star fork nums icon -->
    <style name="project_list_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- project list end -->


</resources>
